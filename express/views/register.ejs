<% include ./partials/upper %>
  <h1><%= title %></h1>
  <form action="/api/register/registered" method="post">
    <div class="input-div">
        <label for="name"></label>
        <input type="text" id="name">
    </div>
    <div class="input-div">
        <label for="surname"></label>
        <input type="text" id="surname">
    </div>
    <div class="input-div">
        <label for="email"></label>
        <input type="email" id="email">
    </div>
    <div class="input-div">
        <input type="submit" id="submit" value="<%= button_text %>">
    </div>
  </form>
<% include ./partials/lower %>
